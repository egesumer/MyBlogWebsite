@using MyBlogWebsite.Models.Concrete;

@model IEnumerable<Article>


<style>
.rightcolumn {
  float: left;
  width: 25%;
  padding-left: 20px;
}
.card {
   background-color: white;
   padding: 20px;
   margin-top: 20px;
}
</style>

<h2>Makalelerim</h2>

<h1>Henüz makalen yok mu? Sorun değil.</h1>

    <div>
    <form asp-action="Create" asp-controller="Article">
        <button type="submit" class="btn btn-success">Yeni Makale Oluştur</button>
    </form>
    </div>


<div class="card">
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
                <tr>
                    <td>@article.ArticleTitle</td>
                    <td>@article.ArticleLength</td>
                    <td>@article.PublishDate</td>
                </tr>
        }
    </tbody>
</table>
</div>