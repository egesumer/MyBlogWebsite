@using MyBlogWebsite.Models.Concrete;
@model List<Article>
@{
	ViewData["Title"] = "Anasayfa";
}


<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
		* {
			box-sizing: border-box;
		}

		body {
			font-family: Arial;
			background: #f1f1f1;
		}

		.header {
			padding: 30px;
			font-size: 40px;
			text-align: center;
			background: white;
		}

		.leftcolumn {
			float: left;
			width: 75%;
			max-width: 1000px;
		}

		.rightcolumn {
			float: left;
			width: 25%;
			padding: 0px;
			margin-top: -600px;
		}

		.title {
			border-bottom: 1px solid black;
			padding-bottom: 10px;
			margin-bottom: 20px;
		}

		.article-content {
			width: calc(100% - 300px);
		}

		.fakeimg {
			background-color: #aaa;
			width: 100%;
			padding: 20px;
		}

		.card {
			background-color: whitesmoke;
			padding: 20px;
			margin-top: 20px;
			max-width: 800px;
			max-height: 350px;
			overflow-y: auto;
		}

		.row:after {
			content: "";
			display: table;
			clear: both;
		}

		.footer {
			padding: 20px;
			text-align: center;
			background: #f1f1f1;
			margin-top: 20px;
		}
		
		#renk{
			color: #fcc200;
		}
	</style>
</head>
<body>

	<div class="header">
		<h2 style="text-shadow: 2px 2px gold;"><i>Racoes News Turkey</i></h2>
	</div>
	<section>
	@foreach (var article in Model)
	{
		<div class="leftcolumn">
			<div class="card">
				<div class="title">
					<h2 class="text-center" id="renk">@article.ArticleTitle</h2>
				</div>

				<p>@article.Content</p>

			</div>
		</div>

	}
	</section>
	<div class="rightcolumn">
		<div class="card">
			<h2>Hakkımızda</h2>
			<p>MVC Blog Projesi için yapılmıştır.</p>
		</div>
		<div class="card">
			<h3>Trend olan Makaleler</h3>
			<div class="fakeimg">Image</div><br>
			<div class="fakeimg">Image</div><br>
			<div class="fakeimg">Image</div>
		</div>
		<div class="card">
			<h3>Popüler Kullanıcılar</h3>
			<p>kim var ki..</p>
		</div>
	</div>
	</div>

	<div class="footer">
	</div>

</body>
</html>
