@using MyBlogWebsite.Models.Concrete;

@model IEnumerable<Article>

    <style>
.rightcolumn {
  float: left;
  width: 25%;
  padding-left: 20px;
}
.card {
   background-color: white;
   padding: 20px;
   margin-top: 20px;
}
</style>


@if (Model != null)
{
    <h2>Makalelerim</h2>
  <div class="card">
<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Oluşturma Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
                <tr>
                    <td>@article.ArticleTitle</td>
                    <td>@article.Content</td>
                    <td>@article.PublishDate</td>
                </tr>
        }
    </tbody>
</table>
</div>
    <div>
        <form asp-action="Create" asp-controller="Article" method="get">
            <button type="submit" class="btn btn-success">Yeni Makale Oluştur</button>
        </form>
    </div>
}
else
{
    <h1>Henüz makalen yok mu? Sorun değil.</h1>
            <div>
        <form asp-action="Create" asp-controller="Article" method="get">
            <button type="submit" class="btn btn-success">İlk Makaleni Oluştur</button>
        </form>
            </div>
}









